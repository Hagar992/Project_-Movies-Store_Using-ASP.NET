@{
    ViewData["Title"] = "About Us";
}

<h2 class="text-center">About Us</h2>

<div class="about-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h3>Welcome to <b>Hagar Atia Movie Store</b></h3>
                <p>
                    At <b>Hagar Atia Movie Store</b>, we're passionate about bringing the magic of cinema right to your screen.
                    Since our founding in <b>2000</b>, we've been dedicated to providing an extensive collection of movies
                    across all genres, from timeless classics to the latest blockbusters.
                </p>
                <p>
                    Whether you're a fan of action-packed adventures, heartwarming dramas, or spine-chilling horrors,
                    our store offers something for everyone. Our mission is to make movie-watching accessible and enjoyable
                    for all, offering both digital streaming and physical rentals.
                </p>
            </div>
            <div class="col-md-6">
                <img src="data:image/jpeg;base64," alt="Movie Collection" class="img-fluid shadow-lg" />
            </div>
        </div>

        <div class="row mt-5 text-center">
            <div class="col-md-4">
                <h4>Our Mission</h4>
                <p>
                    To bring the joy of movies to every home, making it easy for you to discover, rent, or purchase
                    your favorite films with just a few clicks.
                </p>
            </div>
            <div class="col-md-4">
                <h4>Our Collection</h4>
                <p>
                    Explore our vast selection of movies spanning every genre imaginable, from the golden age of cinema
                    to the latest releases. We pride ourselves on offering something for every movie lover.
                </p>
            </div>
            <div class="col-md-4">
                <h4>Why Choose Us?</h4>
                <p>
                    With an intuitive interface, affordable pricing, and a commitment to quality service, <b>Hagar Atia Movie Store</b>
                    is your go-to destination for movie rentals and purchases.
                </p>
            </div>
        </div>
    </div>
</div>

<style>
    .about-section {
        padding: 60px 0;
        background-color: #f8f9fa;
        border-radius: 15px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
    }

        .about-section h2 {
            color: #2c3e50;
            margin-bottom: 40px;
        }

        .about-section h3 {
            color: #34495e;
            margin-bottom: 20px;
        }

        .about-section h4 {
            color: #2980b9;
            margin-bottom: 15px;
        }

        .about-section p {
            color: #7f8c8d;
            font-size: 1.1em;
            line-height: 1.6em;
        }

        .about-section img {
            border-radius: 10px;
            max-width: 100%;
        }

    .shadow-lg {
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
    }

    .text-center {
        text-align: center;
    }

    .mt-5 {
        margin-top: 3rem !important;
    }
</style>
